<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @board.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @board.description %>
</p>

<h2>Sounds</h2>
<% @board.sounds.each do |sound| %>
  <p>
    <b>Sound:</b>
    <%= sound.name %>
    <%= puts sound.attachment %>
    <p class="btn-btn-primary audioButton">Play</p>
    <%= link_to 'Show', board_sound_path(@board, sound) %>
    <%= link_to 'Delete', board_sound_path(@board, sound), data: { confirm: 'Are you sure?' }, method: :delete %>
  </p>
<% end %>

<h2>Add a sound:</h2>
<%= form_for([@board, @board.sounds.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_area :name %>
  </div>
  <div class="field">
    <%= f.label :attachment %>
    <%= f.file_field :attachment, accept: 'audio/mpeg,audio/vnd.wav,audio/ogg,audio/vorbis' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_board_path(@board) %> |
<%= link_to 'Back', boards_path %>
