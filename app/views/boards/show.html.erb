<p id="notice"><%= notice %></p>

<div id = "board-sounds">
  <div class = "row">
    <% if @board.sounds.count > 0 %>
      <% @board.sounds.each do |sound| %>
        <%= render 'sound', sound: sound %>
      <% end %>
    <% else %>
      <p>There doesn't seem to be anything here! Be first first to create a new sound on this board.</p>
    <% end %>
  </div>
</div>

<div id = "board-info">
  <div class = "row">
    <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 board-info-container">
      <h4>Welcome to <%= @board.name %></h4>
      <p><%= @board.description %></p>
      <%= link_to 'Edit', edit_board_path(@board) %> |
      <%= link_to 'Back', boards_path %>

      <h4>Add a sound:</h4>
      <%= form_for([@board, @board.sounds.build]) do |f| %>
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_area :name %>
        </div>
        <div class="field">
          <%= f.label :soundAttachment %>
          <%= f.file_field :soundAttachment %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
