<p id="notice"><%= notice %></p>

<div id = "board-sounds">
  <div class = "row">
    <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 sounds-header">
      <h3><%= @board.name %></h3>
      <div class = "description">
        <p><%= @board.description %></p>
      </div>
    </div>
    <% if @board.sounds.count > 0 %>
      <%= will_paginate @sounds %>
        <% @sounds.each do |sound| %>
          <%= render 'sound', sound: sound %>
        <% end %>
      <%= will_paginate @sounds %>
    <% else %>
      <p>There doesn't seem to be anything here! Be first first to create a new sound on this board.</p>
    <% end %>
  </div>
</div>

<div id = "board-info">
  <div class = "row">
    <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 board-info-container">
      <div class = "blank-info"></div>
      <div class = "add-info">
        <%= form_for([@board, @board.sounds.build]) do |f| %>
          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <%= f.label 'Sound file' %>
            <%= f.file_field :soundAttachment %>
          </div>
          <div class="actions">
            <%= f.submit 'Submit sound', :class => 'sidebar-buttons' %>
          </div>
        <% end %>

        <% @tags.each do |tag| %>
          <p><%=tag.name %></p>
          <% end %>
        <%= form_for([@board, @board.tags.build]) do |f| %>
          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>
           <div class="actions">
            <%= f.submit 'Submit tag', :class => 'sidebar-buttons' %>
          </div>
        <% end %>
      </div>
      <div class = "edit-info">
        <%= link_to 'Edit this board', edit_board_path(@board), :class => 'sidebar-buttons' %>
      </div>
    </div>
  </div>
</div>
