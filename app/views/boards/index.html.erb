<p id="notice"><%= notice %></p>


<div id = "board-sounds">
  <div class = "row">
    <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 sounds-header">
      <h3>SoundShare</h3>
      <div class = "description">

      </div>
    </div>
    <% if @boards.count > 0 %>
    	<%= will_paginate @boards, :class => 'pagination first' %>
    		<% @boards.each do |board| %>
    		<%= link_to(board) do %>
    			<%= render 'board', board: board %>
    			<% end %>
				<% end %>
      <%= will_paginate @sounds %>
    <% else %>
		  <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12">
		    <p id = "empty-content-message">There doesn't seem to be anything here! Be first first to create a new board.</p>
		  </div>
		<% end %>
	</div>
</div>


<div id = "board-info">
  <div class = "row">
    <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 board-info-container">
      <div class = "blank-info"></div>
      <div class = "add-info">
        <h4>Submit a new board</h4>
        <%= form_for Board.new do |f| %>
          <div class="field">
            <%= f.text_field :name, placeholder: "Board name", :class => 'sidebar-buttons' %>
          </div>

          <div class="field">
            <%= f.text_field :description, placeholder: "Board description", :class => 'sidebar-buttons' %>
          </div>

          <div class="field">
            <span class = "sidebar-buttons">Board color: <%= f.color_field :color %></span>
          </div>
          <div class="actions">
            <%= f.submit 'Submit board', :class => 'sidebar-buttons' %>
          </div>
        <% end %>
      </div>
      <div class = "edit-info">

      </div>
    </div>
  </div>
</div>

