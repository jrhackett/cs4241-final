<p id="notice"><%= notice %></p>

<div class = "row">
  <% @boards.each do |board| %>
    <div class = "col-lg-3 col-md-3 col-sm-6 col-xs-6 board-outer">
      <div class = "board-inner">
        <div class="board-panel">
		<%= link_to(board) do %>
			<span class="board-sound-count">
				<%= board.sounds.count %> 
				<% if board.sounds.count != 1 %>
					 sounds
				<% else %>
					 sound
				<% end %>
			</span>
			<h3><%= board.name %></h3>
			<h5><%= board.description %></h5>
		<% end %>
		<div class="board-tags">
			<span>Tags: </span>
			<a href="/">Placeholder1</a>
			<a href="/">Placeholder2</a>
		</div>
	</div>
      </div>
    </div>
  <% end %>
</div>
<%= link_to '+', new_board_path, :class => "add-board-button" %>
