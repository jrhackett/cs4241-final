
<div id = "board-info" class = "form">
  <div class = "row">
    <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 board-info-container">
      <div class = "blank-info"></div>
      <%= form_for(board) do |f| %>
        <% if board.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(board.errors.count, "error") %> prohibited this board from being saved:</h2>

            <ul>
            <% board.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class = "add-info">
          <div class="field">
            <%= f.text_field :name, placeholder: "Board name" %>
          </div>

          <div class="field">
            <%= f.text_field :description, placeholder: "Board description" %>
          </div>

          <div class="field">
            <%= f.color_field :color %>
          </div>

          <div class="actions">
            <%= f.submit 'Submit board', :class => 'sidebar-buttons' %>
          </div>
        </div>

        <div class = "edit-info">
          <%= link_to 'Show this board', @board, :class => 'sidebar-buttons back-button' %>
          <%= link_to 'Back to home', boards_path, :class => 'sidebar-buttons' %>
        </div>
      <% end %> 
    </div>
  </div>
</div>
