<div id = "board-info" class = "form">
  <div class = "row">
    <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 board-info-container">
      <div class = "blank-info"></div>
      <div class = "add-info">

          <%= form_for(:session, url: login_path) do |f| %>

          <%= f.email_field :email, placeholder: "Email" %>

          <%= f.password_field :password, placeholder: "Password" %>

          <%= f.label :remember_me, class: "remember-checkbox" do %>
          <%= f.check_box :remember_me %>
          <span class = "remember">Remember me on this computer</span>
        <% end %>

        <%= f.submit "Log in", class: "sidebar-buttons" %>
      <% end %>
    </div>
    </div>
  </div>
</div>


