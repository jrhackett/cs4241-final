<div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 sound-container">
  <div class = "container">
    <div class = "row">
      <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 right-content">
	<h5>
	  <% if comment.user_id %>
	    <%= gravatar_for User.find(comment.user_id), size: 25 %>
	    <%= link_to User.find(comment.user_id).name, User.find(comment.user_id) %>
	  <% end %>
	</h5>
	<h4><%= comment.body %></h4>
	<p>Submitted <%= time_ago_in_words(comment.created_at) %> ago</p>
	<% if logged_in? && current_user.admin? && current_user.id?(comment.user_id) %>
      	<%= link_to 'Delete', board_sound_comment_path(@board, @sound, comment), data: { confirm: 'Are you sure?' }, method: :delete %>
      	<%end%>
      </div>
    </div>
  </div>
</div>
