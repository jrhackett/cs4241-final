<div id = "board-info" class = "form">
  <div class = "row">
    <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 board-info-container">
      <div class = "blank-info"></div>
      <div class = "add-info">

				<p id="notice"><%= notice %></p>


				<%= gravatar_for @user %>

				<h3><%= @user.name %></h3>

				<p><%= @user.email %></p>

				<%= link_to 'Edit', edit_user_path(@user), class: 'sidebar-buttons' %>
				<%= link_to 'Back', users_path, class: 'sidebar-buttons' %>
			</div>
		</div>
	</div>
</div>
