<div id = "board-info" class = "form">
  <div class = "row">
    <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12 board-info-container">
      <div class = "blank-info"></div>
      <div class = "add-info">

        <%= form_for(user) do |f| %>
          <% if user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

              <ul>
              <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.text_field :name, placeholder: 'Name' %>
          </div>

          <div class="field">
            <%= f.text_field :email, placeholder: 'Email' %>
          </div>

          <div class="field">
            <%= f.password_field :password, placeholder: 'Password' %> 
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, placeholder: 'Password confirmation' %>
          </div>

          <div class="actions">
            <%= f.submit 'Submit user', :class => 'sidebar-buttons' %>
          </div>
        <% end %>
      </div>
      <div class = "edit-info">
        <%= link_to 'Back to home', boards_path, :class => 'sidebar-buttons' %>
      </div>
    </div>
  </div>
</div>
